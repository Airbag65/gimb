local mstatus, mason = pcall(require, "mason")
if not mstatus then
    return
end

local mlstatus, mason_lsp = pcall(require, "mason-lspconfig")
if not mlstatus then
    return
end

mason.setup()

mason_lsp.setup({
    ensure_installed = {
        "gopls",
        "html",
        "ast_grep",
        "cssls",
        "tailwindcss",
        "lua_ls",
        "emmet_ls",
        "clangd",
        "bashls",
        "jsonls",
        "volar",
        "golangci_lint_ls"
    },
    automatic_installation = true
})
